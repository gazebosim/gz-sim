<?xml version="1.0"?>

<!-- Window -->
<window>
  <width>1000</width>
  <height>845</height>
  <menus>
    <drawer default="false">
    </drawer>
  </menus>
</window>

<!-- 3D scene -->
<plugin
  filename="Scene3D"
  x="0"
  y="0"
  z="0"
  height="798"
  width="1000">

  <title>3D View</title>
  <has_titlebar>false</has_titlebar>
  <engine>ogre</engine>
  <scene>scene</scene>
  <ambient_light>1 1 1</ambient_light>
  <background_color>0.8 0.8 0.8</background_color>
  <camera_pose>-6 0 6 0 0.5 0</camera_pose>
</plugin>
<plugin filename="Grid3D" delete_later="true">
  <engine>ogre</engine>
  <scene>scene</scene>
  <insert>
    <cell_count>5</cell_count>
    <pose>3.0 0 0 0 0 0</pose>
    <color>0.2 0.2 0.2 1.0</color>
  </insert>
</plugin>

<!-- World control -->
<plugin
  filename="WorldControl"
  x="0"
  y="725"
  z="1"
  height="72"
  width="121">

  <title>World control</title>
  <has_titlebar>false</has_titlebar>

  <play_pause>true</play_pause>
  <start_paused>false</start_paused>
  <service>/world_control</service>
  <stats_topic>/world_stats</stats_topic>

</plugin>

<!-- World statistics -->
<plugin
  filename="WorldStats"
  x="753"
  y="697"
  z="1"
  height="100"
  width="240">

  <title>World stats</title>
  <has_titlebar>false</has_titlebar>

   <sim_time>true</sim_time>
   <real_time>true</real_time>
   <real_time_factor>true</real_time_factor>
   <topic>/world_stats</topic>

</plugin>

